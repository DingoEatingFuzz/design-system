{{page-title "Cta"}}
<h2 class="dummy-h2">CTA Component</h2>
<section>
  <h3 class="dummy-h3">Basic Use (add action in invocation)</h3>
  <p>Renders a button element:</p>
  <Hds::Cta @text="Call to Action" />
  {{! prettier-ignore-start }}
  {{! VVV throwing an error but I'm not sure why }}
  {{!-- <Hds::Cta @text="Call to Action" {{on "click" this.mySpecialAction}}/> --}}
  {{! prettier-ignore-end }}

  <p class="dummy-paragraph">Invocation Example:</p>
  {{! prettier-ignore-start }}
  <CodeBlock
    @language="markup"
    @code='
      <Hds::Cta @text="Call to Action" &lbrace;&lbrace;on "click" this.mySpecialAction&rbrace;&rbrace; />
    '
  />
  {{! prettier-ignore-end }}

  <h3 class="dummy-h3">With route defined</h3>
  <p class="dummy-paragraph">Renders a link to the browser (appropriate for users with assistive tech)</p>
  <Hds::Cta @route="components.cta" @text="Sign In" @icon="zap" />
  <p class="dummy-paragraph">Invocation Example:</p>
  {{! prettier-ignore-start }}
  <CodeBlock
    @language="markup"
    @code='
       <Hds::Cta @route="components.cta" @text="Sign In" @icon="zap" />
    '
  />
  {{! prettier-ignore-end }}

  <h3 class="dummy-h3">With href defined</h3>
  <p class="dummy-paragraph">Renders a link to the browser (appropriate for users with assistive tech)</p>
  <Hds::Cta @text="Register Now" @href="/" />
  <p class="dummy-paragraph">Invocation Example:</p>
  {{! prettier-ignore-start }}
  <CodeBlock
    @language="markup"
    @code='
      <Hds::Cta @text="Copy to clipboard" @text="Register Now" @href="/" />
    '
  />
  {{! prettier-ignore-end }}

</section>