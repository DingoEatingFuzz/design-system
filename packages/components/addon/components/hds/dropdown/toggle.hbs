{{#if (eq @toggle "more")}}
  <button
    class="hds-dropdown-toggle hds-dropdown-toggle__more {{if @size 'hds-dropdown-toggle-more--small' null}}"
    aria-label={{@text}}
    type="button"
    ...attributes
  >
    <FlightIcon @name="more-horizontal" @size={{if @size "16" "24"}} />
  </button>

{{else if (eq @toggle "user")}}
  <button
    class="hds-dropdown-toggle {{if @avatarUrl 'hds-dropdown-toggle__avatar' 'hds-dropdown-toggle__user'}}"
    aria-label={{@text}}
    type="button"
    ...attributes
  >
    {{#if @avatarUrl}}
      <img src={{@avatarUrl}} alt="" role="presentation" />
    {{else}}
      <FlightIcon @name="user" @size="24" />
    {{/if}}
    <FlightIcon @name="chevron-down" />
  </button>
{{else}}
  <button
    class="hds-dropdown-toggle {{if @color 'hds-dropdown-toggle--secondary' 'hds-dropdown-toggle--primary'}}"
    type="button"
    ...attributes
  >
    {{@text}}
    <FlightIcon @name="chevron-down" />
  </button>
{{/if}}